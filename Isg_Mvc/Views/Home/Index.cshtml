@model IEnumerable<Isg_Mvc.Models.Blog>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>İş Sağlığı ve Güvenliği</h1>
            <span class="subheading">Hiçbir iş güvensiz ve acil yapılacak kadar önemli değildir</span>
           <!-- <span class="subheading">A Blog Theme by Start Bootstrap</span>-->
          </div>
        </div>
      </div>
    </div>
  </header>

<div class="container">
  <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        @foreach (var item in Model)
        {
            <div class="post-preview">
            <a asp-action="POST" asp-route-id="@item.Id">
            <h2 class="post-title">
              @item.Title
            </h2>
            <h3 class="post-subtitle">
              @item.Subtitle
            </h3>
          </a>
          <p class="post-meta">@item.Author.Name tarafından @item.CreateTime tarihinde yayınlandı.
        </div>
        <hr>
        }
        
    </div>        
    </div>
</div>